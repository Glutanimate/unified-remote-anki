<?xml version="1.0" encoding="utf-8"?>
<layout>
  <row>
    <button color="green" text="Launch" ontap="ankilaunch" />
    <button text="Select deck" ontap="actiondeck" />
    <button color="red" text="Quit" ontap="ankiquit" />
  </row>
  <row>
    <button icon="up" onTap="moveup" />
    <button icon="select" onTap="select" />
    <button icon="down" onTap="movedown" />
  </row>
  <row>
    <button icon="zoomin" onTap="actionzoomin" />
    <button icon="zoomnormal" ontap="actionzoomzero" />
    <button icon="zoomout" ontap="actionzoomout" />
    <button icon="fullscreen" ontap="actionfullscreen" />
  </row>
  <row>
    <button text="Show Answer" ontap="actionanswer" />
    <button icon="repeat" onTap="actionrepeat" />
  </row>
  <row>
    <button color="red" text="1" onTap="ratingagain" />
    <button color="orange" text="2" onTap="ratinghard" />
    <button color="yellow" text="3" onTap="ratinggood" />
    <button color="green" text="4" onTap="ratingeasy" />
  </row>
  <row>
    <button icon="favorite" onTap="actionmark" />
    <button icon="docclose" onTap="actionsuspend" />
    <button icon="rotateleft" onTap="actionundo" />
  </row>
</layout>